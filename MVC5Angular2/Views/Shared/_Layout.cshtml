<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/TypeScripts/INKA/INKA.Enums.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Classes.js"></script>
    <script src="~/TypeScripts/INKA/INKA.AJAX.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Navigation.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Messages.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Helpers.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Sablon.js"></script>
    <script src="~/TypeScripts/INKA/INKA.Forms.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <div id="popupform" class="popupform centeredParent">
        <div class="popupBody centered">
            <h2 id="popuptitle"></h2>
            <div id="popupcontent"></div>
            <div class="footer">
                <span id="popupleftButton"></span>
                <span id="popuprightButton"></span>
            </div>
        </div>
    </div>

    <div id="popupform2" class="popupform centeredParent">
        <div class="popupBody2 centered">
            <h2 id="popuptitle"></h2>

            <div id="popupcontent"></div>

            <div class="footer" id="footer2">
                <span id="popupleftButton"></span>
                <span id="popuprightButton"></span>
            </div>
        </div>
    </div>

    <div id="customPopupform" class="popupform centeredParent">
        <div class="customPopupBody centered">
            <h2 id="popuptitle"></h2>

            <div id="popupcontent"></div>

            <div class="footer" id="popupButtons">
            </div>
        </div>
    </div>

    <div id="prompt" class="prompt centeredParent">
        <div class="promptMessage withIcons centered">
            <h2 id="title"></h2>
            <div id="message"></div>
            <div class="footer">
                <span id="leftButton"></span>
                <span id="rightButton"></span>
            </div>
        </div>
    </div>

    <div class="loadingModal">
        <img src="~/Content/images/loading.gif" />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
